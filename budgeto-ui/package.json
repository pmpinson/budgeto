{
  "name": "budgeto-ui",
  "description": "Web UI for budgeto",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/pmpinson/budgeto",
  "license": "",
  "devDependencies": {
    "//": {
      "protractor": "^1.1.1",
      "shelljs": "^0.2.6"
    },
    "bowcat": "latest",
    "bower": "latest",
    "cssmin ": "latest",
    "http-server": "latest",
    "jshint": "latest",
    "karma": "latest",
    "karma-cli": "latest",
    "karma-chrome-launcher": "latest",
    "karma-firefox-launcher": "latest",
    "karma-jasmine": "latest",
    "less": "latest",
    "nodemon": "latest",
    "parallelshell": "latest",
    "uglify-js": "latest",
    "htmlmin": "latest",
    "mkdirp": "latest",
    "yargs": "latest",
    "glob": "latest",
    "opener": "latest",
    "live-reload": "latest",
    "karma-html-reporter": "latest",
    "karma-junit-reporter": "latest",
    "karma-coverage": "0.2.5"
  },
  "scripts": {
    "//": {
      "preupdate-webdriver": "npm install",
      "update-webdriver": "webdriver-manager update",
      "preprotractor": "npm run update-webdriver",
      "protractor": "protractor e2e-tests/protractor.conf.js",
      "update-index-async": "node -e \"require('shelljs/global'); sed('-i', /\\/\\/@@NG_LOADER_START@@[\\s\\S]*\\/\\/@@NG_LOADER_END@@/, '//@@NG_LOADER_START@@\\n' + sed(/sourceMappingURL=angular-loader.min.js.map/,'sourceMappingURL=bower_components/angular-loader/angular-loader.min.js.map','app/bower_components/angular-loader/angular-loader.min.js') + '\\n//@@NG_LOADER_END@@', 'app/index-async.html');\"",
      "build": "parallelshell ''npm run build:style''",
      "watch": "parallelshell 'npm run watch:style' 'echo npm run watch:js' 'echo npm run watch:html'",
      "dist": "parallelshell 'npm run dist:style'"
    },

    "prebuild:dep": "mkdirp target && mkdirp app/scripts",
    "build:dep": "bower --config.directory=target/bower_components install && bowcat target -o app/scripts/",
    "predist:dep": "mkdirp target/bowcat && mkdirp target/dist/app/scripts",
    "dist:dep": "bower --config.directory=target/bower_components install && bowcat target -o target/bowcat && uglifyjs target/bowcat/build.js > target/dist/app/scripts/build.js",

    "validate:style": "lessc -l app/less/styles.less",
    "prebuild:style": "mkdirp app/styles",
    "build:style": "lessc app/less/styles.less > app/styles/styles.css",
    "watch:style": "nodemon --watch app/less/*.less --ext less --exec \"npm run build:style\"",
    "predist:style": "mkdirp target/dist/app/styles",
    "dist:style": "lessc app/less/styles.less | cssmin > target/dist/app/styles/styles.css",

    "validate:script": "jshint --config config/.jshintrc --exclude app/scripts/ app",
    "prebuild:script": "npm run validate:script",
    "build:script": "echo nothing",
    "watch:script": "nodemon --watch app/**/*.js --ext js --exec \"npm run build:script\"",
    "predist:script":"mkdirp target/dist/app && jshint --config config/.jshintrc --exclude app/scripts/ --reporter=checkstyle app > target/jshint.xml",
    "dist:script": "node config/build/uglify.js app/**/*.js:target/dist -e app/scripts/build.js",

    "validate:html": "echo nothing",
    "prebuild:html": "npm run validate:html",
    "build:html": "echo nothing",
    "predist:html":"mkdirp target/dist/app",
    "dist:html": "node config/build/htmlmin.js app/**/*.html:target/dist",

    "validate:resources": "echo nothing",
    "prebuild:resources": "npm run validate:resources",
    "build:resources": "echo nothing",
    "predist:resources":"mkdirp target/dist/app",
    "dist:resources": "node config/build/resources.js app/**/*.gif:target/dist",

    "build": "npm run build:dep && npm run build:style && npm run build:script && npm run build:html && npm run build:resources",
    "watch": "parallelshell  \"npm run watch:style\" \"npm run watch:script\"",
    "predist": "mkdirp target & rimraf target",
    "dist": "npm run dist:dep && npm run dist:style && npm run dist:script && npm run dist:html && npm run dist:resources",

    "test:validate": "jshint --config config/.jshintrc-test test",
    "pretest:single": "npm run test:validate",
    "test:single": "karma start config/karma.conf.js  --single-run",
    "pretest:watch": "npm run test:validate",
    "test:watch": "karma start config/karma.conf.js",
    "test": "npm run test:watch",

    "live-reload": "live-reload --port 8999 app/",
    "open-browser":"opener http://localhost:9000/app",
    "prebuild:serve": "npm run build",
    "build:serve": "npm run open-browser & http-server -a localhost -p 9000 -c-1",
    "dev":"parallelshell \"npm run live-reload -s\" \"npm run build:serve\" \"npm run watch\"",
    "predist:serve": "npm run dist",
    "dist:serve": "npm run open-browser & http-server target/dist/ -a localhost -p 9000 -c-1",
    "start": "npm run dist:serve"
  }
}
