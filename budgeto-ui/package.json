{
  "name": "budgeto-ui",
  "description": "Web UI for budgeto",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/pmpinson/budgeto",
  "license": "",
  "devDependencies": {
    "//": {
      "protractor": "^1.1.1",
      "shelljs": "^0.2.6"
    },
    "bower": "latest",
    "cssmin ": "latest",
    "glob": "latest",
    "htmlmin": "latest",
    "http-server": "latest",
    "jshint": "latest",
    "karma": "latest",
    "karma-chrome-launcher": "latest",
    "karma-cli": "latest",
    "karma-coverage": "latest",
    "karma-firefox-launcher": "latest",
    "karma-html-reporter": "latest",
    "karma-jasmine": "latest",
    "karma-junit-reporter": "latest",
    "karma-phantomjs-launcher": "latest",
    "karma-requirejs": "latest",
    "less": "latest",
    "live-reload": "latest",
    "mkdirp": "latest",
    "opener": "latest",
    "parallelshell": "latest",
    "rimraf": "latest",
    "uglify-js": "latest",
    "watch": "latest",
    "yargs": "latest"
  },
  "scripts": {
    "//": {
      "preupdate-webdriver": "npm install",
      "update-webdriver": "webdriver-manager update",
      "preprotractor": "npm run update-webdriver",
      "protractor": "protractor e2e-tests/protractor.conf.js",
      "update-index-async": "node -e \"require('shelljs/global'); sed('-i', /\\/\\/@@NG_LOADER_START@@[\\s\\S]*\\/\\/@@NG_LOADER_END@@/, '//@@NG_LOADER_START@@\\n' + sed(/sourceMappingURL=angular-loader.min.js.map/,'sourceMappingURL=bower_components/angular-loader/angular-loader.min.js.map','app/bower_components/angular-loader/angular-loader.min.js') + '\\n//@@NG_LOADER_END@@', 'app/index-async.html');\""
    },

    "addBuild:dep": "bower --config.directory=app/lib --save-dev install",
    "postaddBuild:dep": "npm run build:dep",
    "addDist:dep": "bower --config.directory=app/lib --save install",
    "postaddDist:dep": "npm run build:dep",
    "build:dep": "mkdirp target && bower --config.directory=app/lib install",
    "dist:dep": "mkdirp target/dist/app/lib && bower --production --config.directory=target/dist/app/lib install",

    "validate:html": "echo nothing",
    "build:html": "echo nothing",
    "dist:html": "mkdirp target/dist/app && node config/build/htmlmin.js app/**/*.html:target/dist",

    "validate:style": "lessc -l app/styles/styles.less",
    "build:style": "lessc app/styles/styles.less > app/styles/styles.css",
    "watch:style": "watch \"npm run build:style\" app/styles",
    "dist:style": "mkdirp target/dist/app/styles && lessc app/styles/styles.less | cssmin > target/dist/app/styles/styles.css",

    "validate:script": "jshint --config config/.jshintrc --exclude app/lib/ app",
    "build:script": "echo nothing",
    "watch:script": "watch \"npm run build:script\" app",
    "dist:script": "mkdirp target/dist/app && jshint --config config/.jshintrc --exclude app/lib/ app && node config/build/uglify.js app/*.js:target/dist app/components/**/*.js:target/dist -e app/lib/*",

    "validate:image": "echo nothing",
    "build:image": "echo nothing",
    "dist:image": "mkdirp target/dist/app/images && node config/build/images.js app/**/*.gif:target/dist",

    "build": "npm run build:dep && npm run build:html && npm run build:style && npm run build:script && npm run build:image",
    "watch": "parallelshell \"npm run watch:style\" \"npm run watch:script\"",
    "dist": "rimraf target && npm run build && npm run test:dist && mkdirp target && rimraf target/bower_components && npm run dist:dep && npm run dist:html && npm run dist:style && npm run dist:script && npm run dist:image",

    "test:validate": "jshint --config config/.jshintrc-test test",
    "test:single": "rimraf target/coverage && rimraf target/test-results && karma start config/karma.conf.js --single-run",
    "test:dist": "rimraf target/coverage && rimraf target/test-results && karma start config/karma.conf-dist.js --single-run",
    "test:watch": "rimraf target/coverage && rimraf target/test-results && karma start config/karma.conf.js",
    "test": "npm run test:watch",

    "dev": "parallelshell \"npm run build:serve\" \"npm run watch\"",
    "live-reload": "live-reload --port 8999 app/",
    "open-browser": "opener http://localhost:9000/app",

    "build:serve": "npm run build && npm run open-browser & http-server -a localhost -p 9000 -c-1",
    "dist:serve": "npm run dist && npm run open-browser & http-server target/dist/ -a localhost -p 9000 -c-1",
    "start": "npm run dist:serve"
  }
}
